doctype html
html
  head
    title Real-time Web Chat
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css')
    style.
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #eceff1; /* Light gray background */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      #chat-container {
        background: #ffffff; /* White background for the chat container */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 450px;
      }
      #content {
        width: 100%;
        height: 300px;
        margin-bottom: 20px;
        border: solid 1px #b0bec5; /* Light blue-gray border */
        overflow-y: scroll;
        padding: 10px;
        background-color: #fafafa; /* Very light gray background */
        border-radius: 4px;
      }
      .controls {
        display: flex;
        flex-direction: column;
      }
      .controls label {
        color: #455a64; /* Dark blue-gray text color */
        margin-bottom: 5px;
      }
      .controls input {
        margin-bottom: 10px;
        padding: 10px;
        border: 1px solid #cfd8dc; /* Light blue-gray border */
        border-radius: 4px;
      }
      .controls #send {
        background-color: #42a5f5; /* Light blue button background */
        color: white;
        border: none;
        padding: 10px;
        border-radius: 4px;
        cursor: pointer;
      }
      .controls #send:hover {
        background-color: #1e88e5; /* Darker blue on hover */
      }
    script(src='/socket.io/socket.io.js')
    script(src='/chat.js')
  body
    #chat-container
      .header.has-text-centered
        h2.title.is-4
          i.fas.fa-comments(style='margin-right: 10px; color: #42a5f5;') /* Light blue icon */
          | Real-time Web Chat
      #content
      .controls
        label.label Name:
        input#name.input(type='text', placeholder='Enter your name')
        label.label Message:
        input#field.input(type='text', placeholder='Enter your message')
        input#send.button(type='button', value='Send')
